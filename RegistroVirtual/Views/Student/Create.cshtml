@model Models.StudentModel

@{
    ViewBag.Title = "Estudiante";
    Layout = "~/Layouts/DashboardLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Estudiante 
                </h1>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <!-- Error -->
            <div class="row">
                <div class="col-lg-6 error-message">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        }

        <!-- Form -->
        <div class="col-md-4">
            @using (Html.BeginForm("Save", "Student", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                   <label>Cédula:</label>
                    @Html.TextBoxFor(m => m.CardId, new { required = "required", placeholder = "Cédula", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nombre:</label>
                    @Html.TextBoxFor(m => m.FirstName, new { required = "required", placeholder = "Nombre", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Apellidos:</label>
                    @Html.TextBoxFor(m => m.LastName, new { required = "required", placeholder = "Apellidos", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Sección:</label>
                    @Html.DropDownListFor(m => m.ClassId, Model.Classes, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-large">Guardar</button>
            }
        </div>
    </div>
</div>