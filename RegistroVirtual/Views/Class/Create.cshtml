@model Models.ClassModel

@{
    ViewBag.Title = "Sección";
    Layout = "~/Layouts/DashboardLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Sección
                </h1>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <!-- Error -->
            <div class="row">
                <div class="col-lg-6 error-message">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        }

        <!-- Form -->
        <div class="col-md-4">
            @using (Html.BeginForm("Save", "Class", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                    <label>Nombre:</label>
                    @Html.TextBoxFor(m => m.Name, new { required = "required", placeholder = "Name", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Institución:</label>
                    @Html.DropDownListFor(m => m.InstitutionId, Model.Institutions, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Año escolar:</label>
                    @Html.DropDownListFor(m => m.SchoolYearId, Model.SchoolYears, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rúbrica Primer Trimestre:</label>
                    @Html.DropDownListFor(m => m.FirstTrimesterProfileId, Model.RegisterProfiles, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rúbrica Segundo Trimestre:</label>
                    @Html.DropDownListFor(m => m.SecondTrimesterProfileId, Model.RegisterProfiles, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rúbrica Tercer Trimestre:</label>
                    @Html.DropDownListFor(m => m.ThirdTrimesterProfileId, Model.RegisterProfiles, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-large">Guardar</button>
            }
        </div>
    </div>
</div>

