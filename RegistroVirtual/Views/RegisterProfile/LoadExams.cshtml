@model  IEnumerable<Models.ExamModel>


@{
    var gridExams = new WebGrid(Model, canPage: false,
    selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
}

<div class="row grid-container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-subtitle">
                Exámenes
            </h3>
        </div>
    </div>
    <div class="col-lg-8">
        @gridExams.GetHtml(tableStyle: "table table-responsive webGrid profile-exams-grid",
                        footerStyle: "footer",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        selectedRowStyle: "select",
                        mode: WebGridPagerModes.All,
                        columns: gridExams.Columns(
                             gridExams.Column("Name", "Nombre", format: @<text>  <span class="display-mode"> <label id="lblName">@item.Name</label> </span> <input type="text" id="Name" value="@item.Name" class="edit-mode" /></text>, style: "col2Width"),
                             gridExams.Column("Percentage", "Porcentaje", format: @<text>  <span class="display-mode"> <label id="lblPercentage">@item.Percentage</label> </span> <input type="number" min="0" id="Percentage" value="@item.Percentage" class="edit-mode" /></text>, style: "col2Width"),
                             gridExams.Column("Score", "Puntos", format: @<text> <span class="display-mode"> <label id="lblScore">@item.Score</label> </span>  <input type="number" min="0" id="Score" value="@item.Score" class="edit-mode" /> </text>, style: "col2Width"),
                             gridExams.Column("Acciones", style: "action col3Width", format: @<text>
                                <a class="edit-exam display-mode edit-button fa fa-pencil"></a>
                                <a class="save-exam edit-mode save-button fa fa-floppy-o" data-exam-id="@item.Id"></a>
                                <a class="cancel-exam edit-mode cancel-button fa fa-ban"></a>
                                <a class="remove-exam display-mode remove-button fa fa-trash-o" data-exam-id="@item.Id"></a>
                            </text>, canSort: false)
                        ))
    </div>

</div>

