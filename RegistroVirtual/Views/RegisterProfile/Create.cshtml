@model Models.RegisterProfileModel

@{
    ViewBag.Title = "Register Profile";
    Layout = "~/Layouts/DashboardLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Register Profile
                </h1>
            </div>
        </div>

        <!-- Form -->
        <div class="col-md-4">
            @using (Html.BeginForm("Save", "RegisterProfile", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                    <label>Name:</label>
                    @Html.TextBoxFor(m => m.Name, new { required = "required", placeholder = "Name", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Trimester:</label>
                    @Html.DropDownListFor(m => m.TrimesterId, Model.Trimesters, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>School Year:</label>
                    @Html.DropDownListFor(m => m.SchoolYearId, Model.SchoolYears, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Daily Work Percentage:</label>
                    @Html.TextBoxFor(m => m.DailyWorkPercentage, new { required = "required", @class = "form-control", @type = "number", min= "1", max = "25", @Value = "1" })
                </div>
                <div class="form-group">
                    <label>Concept Percentage:</label>
                    @Html.TextBoxFor(m => m.ConceptPercentage, new { required = "required", @class = "form-control", @type = "number", min = "1", max = "25", @Value = "1" })
                </div>
                <div class="form-group">
                    <label>Assistance Percentage:</label>
                    @Html.TextBoxFor(m => m.AssistancePercentage, new { required = "required", @class = "form-control", @type = "number", min = "1", max = "25", @Value = "1" })
                </div>


                <button type="submit" class="btn btn-primary btn-block btn-large">Save</button>
            }
        </div>
    </div>
</div>
