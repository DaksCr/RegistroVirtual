@model Models.RegisterProfileModel

@{
    ViewBag.Title = "Register Profile";
    Layout = "~/Layouts/DashboardLayout.cshtml";
}

<link href="~/Content/css/site/grid.css" rel="stylesheet" />

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Register Profile
                </h1>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <!-- Error -->
            <div class="row">
                <div class="col-lg-6 error-message">
                   @ViewBag.ErrorMessage
                </div>
            </div>
        }

        <!-- Form -->
        <div class="col-lg-8">
            @using (Html.BeginForm("Save", "RegisterProfile", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(m => m.Name, new { required = "required", placeholder = "Name", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Trimester:</label>
                        @Html.DropDownListFor(m => m.TrimesterId, Model.Trimesters, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>School Year:</label>
                        @Html.DropDownListFor(m => m.SchoolYearId, Model.SchoolYears, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Subjects:</label>
                        @Html.DropDownListFor(m => m.SubjectId, Model.Subjects, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Daily Work Percentage:</label>
                        @Html.TextBoxFor(m => m.DailyWorkPercentage, new { required = "required", @class = "form-control", @type = "number", min = "1", max = "25" })
                    </div>
                    <div class="form-group">
                        <label>Concept Percentage:</label>
                        @Html.TextBoxFor(m => m.ConceptPercentage, new { required = "required", @class = "form-control", @type = "number", min = "1", max = "25" })
                    </div>
                    <div class="form-group">
                        <label>Assistance Percentage:</label>
                        @Html.TextBoxFor(m => m.AssistancePercentage, new { required = "required", @class = "form-control", @type = "number", min = "1", max = "25" })
                    </div>
                </div>

                <div id="exams-container">
                    @{Html.RenderAction("LoadExams");}
                </div>

                <div id="extraclasses-container">
                    @{Html.RenderAction("LoadExtraclasses");}
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-block btn-large btn-submit">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Content/js/site/register-profile-exam.js"></script>
<script src="~/Content/js/site/register-profile-extraclass.js"></script>
