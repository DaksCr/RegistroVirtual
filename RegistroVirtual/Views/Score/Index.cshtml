@model Models.ScoreViewModel

@{
    ViewBag.Title = "Scores";
    Layout = "~/Layouts/DashboardLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Scores
                </h1>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <!-- Error -->
            <div class="row">
                <div class="col-lg-6 success-message">
                    @ViewBag.SuccessMessage
                </div>
            </div>
        }


        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <!-- Error -->
            <div class="row">
                <div class="col-lg-6 error-message">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        }

        <div class="row filters-container">

            <div class="col-lg-12">
                <h3>
                    Filter
                </h3>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label>Seccion:</label>
                    @Html.DropDownList("selectedClass", Model.Classes, new { @class = "form-control", id="selected-class" })
                </div>
                <div class="form-group">
                    <label>A;o:</label>
                    @Html.DropDownList("selectedYear", Model.Years, new { @class = "form-control", id = "selected-year" })
                </div>
                <div class="form-group">
                    <label>Trimestre:</label>
                    @Html.DropDownList("selectedTrimester", Model.Trimesters, new { @class = "form-control", id = "selected-trimester" })
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-primary btn-block btn-large" id="score-search-button"><i class="fa fa-search" aria-hidden="true"></i> Buscar</button>
                </div>
            </div>
        </div>

        <div class="row grid-container" id="scores-container"></div>

    </div>
</div>

<script src="~/Content/js/site/score-actions.js"></script>
